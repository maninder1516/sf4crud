{# templates/article/edit.html.twig #}
<style>
    th, td {
        padding: 10px;
    }
    th {
        text-align: right;
    }
</style>

<h1>Create or Update Article:</h1>

{{ form_start(form) }}

<table>
    <tbody>
    <tr>
        <th>{{ 'article.title.label'|trans }}:</th>
        <td>{{ form_widget(form.title) }}</td>
    </tr>
    <tr>
        <th>{{ 'article.author.label'|trans }}:</th>
        <td>{{ form_widget(form.author) }}</td>
    </tr>
    <tr>
        <th>{{ 'article.article_body.label'|trans }}:</th>
        <td>{{ form_widget(form.body) }}</td>
    </tr>
    <tr>
        <th>{{ 'article.homepage.label'|trans }}:</th>
        <td>{{ form_widget(form.url) }}</td>
    </tr>
    <tr>
        <th></th>
        <td>{{ form_widget(form.save) }}</td>
    </tr>
    </tbody>
</table>

{{ form_end(form) }}